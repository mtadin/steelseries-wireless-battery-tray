{
  "name": "steelseries-wireless-battery-tray",
  "version": "2.0.1-newerHeadsetsBeta",
  "description": "A system tray (notification area) app that displays battery percentages of Steelseries wireless headphones.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "steelseries",
    "arctis",
    "wireless",
    "battery",
    "systray",
    "system tray",
    "notification area",
    "percentage"
  ],
  "author": "mtadin",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@electron-forge/publisher-github": "^6.0.4",
    "electron": "^22.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "jimp": "^0.16.2",
    "node-abi": "^3.30.0",
    "node-hid": "^2.1.2",
    "trim-newlines": "^4.0.2"
  },
  "build": {
    "extraResources": [
      "./icons/**"
    ]
  },
  "config": {
    "forge": {
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "mtadin",
              "name": "steelseries-wireless-battery-tray"
            },
            "prerelease": false,
            "draft": false
          }
        }
      ],
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "config": {
            "name": "steelseries_wireless_battery_tray"
          }
        }
      ]
    }
  }
}
